<?xml version="1.0" encoding="UTF-8"?>
<config>
    <infos>
        <title>duzhi_v1</title>
        <id>dm001</id>
        <description>JBlog是JPress内置的博客模板，后续会持续升级。</description>
        <author>ashang.peng</author>
        <authorWebsite>http://www.duzhi.me</authorWebsite>
        <version>v1.0</version>
        <versionCode>1</versionCode>
        <updateUrl>http://www.duzhi.me</updateUrl>
    </infos>

    <module title="日志" name="article" list="所有文章" add="撰写文章" comment="评论">
        <taxonomy title="分类" name="category" formType="select" />
        <taxonomy title="专题" name="feature" formType="select" >
            <metadata dataType="input" name="author" title="专题作者"  description="这个数据只是模板自定义模型的测试。" placeholder="请填写作者用户名"/>
        </taxonomy>
        <taxonomy title="标签" name="tag" formType="input" />
        <metadata dataType="input" name="author" title="作者"  placeholder=""/>
        <metadata dataType="text" name="source" title="引用URL"  placeholder=""/>
        <metadata dataType="text" name="copyright" title="文章底部版权信息"  placeholder=""/>
    </module>

    <module title="历史上今天" name="history" list="历史新闻" add="新历史" comment="评论">
        <taxonomy title="标签" name="tag" formType="input" />
    </module>
    <module title="头条" name="tt" list="头条" add="新头条" comment="评论">
        <taxonomy title="标签" name="tag" formType="input" />
    </module>

    <module title="演示区" name="dm" list="演示区" add="新内容" comment="评论">
        <taxonomy title="分类" name="category" formType="select" />
        <taxonomy title="标签" name="tag" formType="input" />
        <metadata dataType="input" name="author" title="作者"  placeholder=""/>
        <metadata dataType="text" name="demo" title="演示地址"  placeholder="请输入演示地址"/>
        <metadata dataType="text" name="downloads" title="下载地址"  placeholder=""/>
        <metadata dataType="text" name="version" title="使用版本"  placeholder=""/>
        <metadata dataType="text" name="updateDate" title="更新日期"  placeholder=""/>
    </module>

    <module title="页面" name="page" list="所有页面" add="新建页面" comment="评论">
    </module>
    <thumbnail name="t1" size="780 x 240" />
    <thumbnail name="t2" size="240 x 140" />
    <thumbnail name="t3" size="600 x 300" />
    <thumbnail name="t4" size="300 x 300" />
    <thumbnail name="t5" size="300 x 200" />

</config>